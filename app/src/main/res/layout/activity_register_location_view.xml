<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.RegisterLocationView">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:orientation="vertical">

        <EditText
            android:id="@+id/location_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/location_name" />

        <EditText
            android:id="@+id/location_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/lcoation_description" />

        <EditText
            android:id="@+id/location_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/location_category" />

        <EditText
            android:id="@+id/location_streetLocated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/location_street" />

        <EditText
            android:id="@+id/location_postalCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/location_postalCode"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/location_registerDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/location_registerDate"
            android:ems="10"
            android:inputType="date" />

        <CheckBox
            android:id="@+id/location_disabledAccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/location_disabled_access" />
    </LinearLayout>

    <Button
        android:id="@+id/register_location_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="registerLocation"
        android:text="@string/location_register_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>