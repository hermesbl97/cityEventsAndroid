<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.RegisterLocationView">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/location_name" />

        <EditText
            android:id="@+id/artist_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/lcoation_description" />

        <EditText
            android:id="@+id/artist_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/category" />

        <EditText
            android:id="@+id/artist_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/location_street" />

        <EditText
            android:id="@+id/artist_followers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/postalCode"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/artist_birthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/register_date"
            android:ems="10"
            android:inputType="date" />

        <CheckBox
            android:id="@+id/artist_active"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/disabled_access" />
    </LinearLayout>


    <com.mapbox.maps.MapView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:mapbox="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mapView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            mapbox:mapbox_cameraTargetLat="41.656"
            mapbox:mapbox_cameraTargetLng="-0.88333333333333"
            mapbox:mapbox_cameraZoom="12.0"
            app:layout_constraintTop_toBottomOf="@id/linearLayout"
            app:layout_constraintBottom_toTopOf="@id/register_artist_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/register_artist_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/location_register_button"
        android:onClick="registerLocation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>